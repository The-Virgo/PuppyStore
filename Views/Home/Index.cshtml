@model IEnumerable<PuppyStoreFinal.Models.Event>

@{
    ViewData["Title"] = "Home Page";
    Layout = "_Layout";
}

<head>
    <link rel="stylesheet" href="~/css/home.css" />
</head>

<body>

    <section class="banner">
        <div class="banner-container">
            <div class="row">
                <div class="col-md-6">
                    <div class="banner-desc">
                        <h1 class="title">FIND YOUR FOREVER FRIEND</h1>
                        <p>
                            Your furry soulmate is just a click away
                        </p>
                        <a class="btn btn-primary">Start Looking</a>
                    </div>
                </div>
                <div class="col-md-6">

                </div>
            </div>
        </div>
    </section>

    <div class="home-card-section">
        <div class="home-card-container">
            <div class="home-card">
                <div class="home-image-container">
                    <img src="~/site-pictures/available-puppies-link.jpg" />
                    <div class="home-card-pretext">
                        <h2>
                            PUPPIES
                        </h2>
                    </div>
                    <div class="overlay" style="background-color: #d45224">
                        <div class="home-card-text">
                            <h2>
                                PUPPIES
                            </h2>
                            <p>
                                Take a look at the furry friends we have in store!
                            </p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="home-card">
                <div class="home-image-container">
                    <img src="~/site-pictures/breeds-link.jpg" />
                    <div class="home-card-pretext">
                        <h2>
                            BREEDS
                        </h2>
                    </div>
                    <div class="overlay" style="background-color: #96a550">
                        <div class="home-card-text">
                            <h2>
                                BREEDS
                            </h2>
                            <p>
                                Looking for a specific breed? Click here and view all breeds.
                            </p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="home-card">
                <div class="home-image-container">
                    <img src="~/site-pictures/about-us-link.jpg" />
                    <div class="home-card-pretext">
                        <h2>
                            ABOUT US
                        </h2>
                    </div>
                    <div class="overlay" style="background-color: #45515d">
                        <div class="home-card-text">
                            <h2>
                                ABOUT US
                            </h2>
                            <p>
                                Learn about where we get our puppies and how we take care of them.
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <div class="event-content">
        <div class="event-header">
            <div class="title">
                <h1>
                    CHECK OUT THE EVENTS WE HAVE PLANNED
                </h1>
                <div class="sub-heading">
                    <h2>
                        At Paw Pals we want to give those looking for their forever friend every chance to make a connection. Come to one of our scheduled events and see who wins your heart.
                    </h2>
                </div>
            </div>
            
            
        </div>


        <div id="carouselExampleIndicators" class="carousel slide w-50" data-ride="carousel" style="justify-items:center; margin:auto;">
            <ol class="carousel-indicators">
                @{int index = 0; }
                @foreach (Event e in Model)
                {
                    if (index == 0)
                    {
                        <li data-target="#carouselExampleIndicators" data-slide-to="@index" class="active"></li>
                    }
                    else
                    {
                        <li data-target="#carouselExampleIndicators" data-slide-to="@index"></li>
                    }
                    index++;
                }
            </ol>
            <div class="carousel-inner">
                @{int index2 = 0;}
                @foreach (Event e in Model)
                {
                    if (index2 == 0)
                    {
                        <div class="carousel-item active">
                            <img class="d-block w-100" src=@("/event-pictures/event" + e.EventId.ToString() + ".jpg") height="250">
                            <div class="carousel-caption ">
                                <h5>@e.Title</h5>
                                <p>@e.Description</p>
                                <p>@e.EventDate.Date</p>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="carousel-item">
                            <img class="d-block w-100" src=@("/event-pictures/event" + e.EventId.ToString() + ".jpg") height="250">
                            <div class="carousel-caption ">
                                <h5>@e.Title</h5>
                                <p>@e.Description</p>
                                <p>@e.EventDate.Date</p>
                            </div>
                        </div>
                    }
                    index2++;
                }
            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>

    
</body>
