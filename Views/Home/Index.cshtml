@model IEnumerable<PuppyStoreFinal.Models.Event>

@{
    ViewData["Title"] = "Home Page";
    Layout = "_Layout";
}

<head>
    <link rel="stylesheet" href="~/css/cards.css" />
</head>
<body>
    <div id="carouselExampleIndicators" class="carousel slide w-50" data-ride="carousel" style="justify-items:center; margin:auto;">
        <ol class="carousel-indicators">
            @{int index = 0; }
            @foreach (Event e in Model)
            {
                if (index == 0)
                {
                    <li data-target="#carouselExampleIndicators" data-slide-to="@index" class="active"></li>
                }
                else
                {
                    <li data-target="#carouselExampleIndicators" data-slide-to="@index"></li>
                }
                index++;
            }
        </ol>
        <div class="carousel-inner">
            @{int index2 = 0;}
            @foreach (Event e in Model)
            {
                if (index2 == 0)
                {
                    <div class="carousel-item active">
                        <img class="d-block w-100" src=@("/event-pictures/event" + e.EventId.ToString() + ".jpg") height="250">
                        <div class="carousel-caption d-none d-md-block">
                            <h5>@e.Title</h5>
                            <p>@e.Description</p>
                            <p>@e.EventDate.Date</p>
                        </div>
                    </div>
                }
                else
                {
                    <div class="carousel-item">
                        <img class="d-block w-100" src=@("/event-pictures/event" + e.EventId.ToString() + ".jpg") height="250">
                        <div class="carousel-caption d-none d-md-block">
                            <h5>@e.Title</h5>
                            <p>@e.Description</p>
                            <p>@e.EventDate.Date</p>
                        </div>
                    </div>
                }
                index2++;
            }
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</body>
